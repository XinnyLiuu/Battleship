<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Battleship</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
        integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/f49b1a3ec6.js" crossorigin="anonymous"></script>
</head>

<body>

    <!-- Header -->
    <nav class="navbar navbar-dark bg-dark">
        <span id="navTitle" class="navbar-brand mb-0 h1">Battleship</span>
        {{#if started}}
            <div>
            <span class="navbar-text">
                Hello, {{username}}
            </span>

                &nbsp;

                <button id="logoutBtn" class="btn btn-outline-primary">Logout</button>
            </div>
        {{/if}}
    </nav>

    <script>
        document.querySelector("#logoutBtn").addEventListener("click", async () => {
            try {
                const res = await fetch("/api/user/logout", {
                    method: "POST"
                });

                if (res.status === 200) {
                    window.location.replace("/");
                }
            } catch (e) {
                console.log(e);
                alert("Error with request!");
            }
        });


    </script>